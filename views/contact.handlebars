<main class="container">
  <section class="columns">
    <div
      class="column col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12s"
    >
      <form action="/messages/new" method="post">
        <input
          class="message-name"
          type="text"
          placeholder="Name"
          required="required"
        />
        <input
          class="message-surname"
          type="text"
          placeholder="Surname"
          required="required"
        />
        <input
          class="message-mail"
          type="email"
          placeholder="Mail"
          required="required"
        />
        <input
          class="message"
          type="text"
          placeholder="Message"
          required="required"
        />
        <input class="message-date" type="date" required="required" />
        <input class="send-button" type="submit" value="Send!" />
      </form>
    </div>
    <div
      class="column col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12s"
    >

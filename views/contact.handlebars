<main class="container">
  <div class="left">
    <form class="message-grid" action="/messages/new" method="post">
      <input
        class="message-left"
        type="text"
        name="messagename"
        placeholder="Name"
        required="required"
      />
      <input
        class="message-right"
        type="text"
        name="messagesurname"
        placeholder="Surname"
        required="required"
      />
      <input
        class="message-full"
        type="email"
        name="messageemail"
        placeholder="Mail"
        required="required"
      />
      <textarea
        name="message-full"
        class="message"
        type="text"
        placeholder="Message"
        required="required"
        cols="30"
        rows="10"
      ></textarea>
      <input
        class="message-left"
        type="date"
        name="messagedate"
        required="required"
      />
      <input class="message-right" type="submit" value="Send!" />
    </form>
  </div>

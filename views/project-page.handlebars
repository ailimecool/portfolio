    <div>Sorry technical issues! <br /> {{theError}}</div>
  {{else}}

<div><a href="/projects">GO BACK</a></div>


        <div><img class="project-img" src="{{proj.projectimg}}" alt="{{proj.projectimg}}" /></div>

        <div>
            <h1 class="project-name">{{proj.projectname}}</h1>

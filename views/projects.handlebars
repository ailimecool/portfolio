<main class="container">
  {{#if isAdmin}}
    <div>
      <a href="/projects/new">NEW PROJECT</a>
    </div>
  {{/if}}

  {{#if dbError}}
    <div>Sorry technical issues! <br /> {{theError}}</div>
  {{else}}

    {{#each projects}}
    <a href="/project-page/{{projectid}}">
      <div class="project-border">

        <img class="project-img" src="{{projectimg}}" alt="{{projectimg}}" />
        <h1 class="project-name">{{projectname}}</h1>
        <p class="project-description">{{projectdescription}}</p>
        <p class="project-date">{{projectdate}}</p>

        <div>
          {{#if ../isAdmin}}
            <a href="/projects/update/{{projectid}}">MODIFY</a>
            <a href="/projects/delete/{{projectid}}">DELETE</a>
          {{/if}}
        </div>

      </div></a>
    {{/each}}
  {{/if}}

</main>
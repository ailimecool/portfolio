<main class="container">
  {{#if isAdmin}}
    <div>
      <a href="/projects/new">NEW PROJECT</a>
    </div>
  {{/if}}

  {{#if dbError}}
    <div>Sorry technical issues! <br /> {{theError}}</div>
  {{else}}

    {{#each projects}}
      <div>

        <img src="{{projectimg}}" alt="{{projectimg}}" />
        <h1>{{projectname}}</h1>
        <p>{{projectdescription}}</p>

        <div>
          {{#if ../isAdmin}}
            <a href="/projects/update/{{projectid}}">MODIFY</a>
            <a href="/projects/delete/{{projectid}}">DELETE</a>
          {{/if}}
        </div>

      </div>
    {{/each}}
  {{/if}}

</main>